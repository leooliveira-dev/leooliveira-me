---
import { Icon } from 'astro-icon';
import type { Skill } from '../lib/content/model';

interface Props {
  title: string;
  skills: Skill[];
  columns: number;
}

const { title, skills, columns } = Astro.props;

//TODO: Tooltips
---

<div class="w-full mb-6">
    <h3 class="text-2xl font-medium text-center mb-3">{title}</h3>
    <div class="grid gap-8" style={`grid-template-columns: repeat(${columns}, 1fr)`}>
        {
          skills.map(skill => <div class="self-center">
            <Icon name={skill.icon} />
          </div>)
        }
    </div>
</div>
