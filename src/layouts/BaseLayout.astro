---
import "@fontsource/poppins";

const { locale = "en-US" } = Astro.props;
---

<html lang={locale}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Leo Oliveira</title>
		<link rel="alternate" href="https://leooliveira.me/en-US/" hreflang="en-US"/>
		<link rel="alternate" href="https://leooliveira.me/pt-BR/" hreflang="pt-BR"/>
		<link rel="alternate" href="https://leooliveira.me/en-US/" hreflang="x-default"/>
	</head>
	<body class="min-h-screen flex flex-col justify-between font-poppins subpixel-antialiased">
		<slot></slot>
	</body>
</html>
