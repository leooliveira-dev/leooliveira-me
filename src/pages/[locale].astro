---
import BaseLayout from "../layouts/BaseLayout.astro";
import { fetchHomeContent } from "../lib/content/contentful/";

export const getStaticPaths = () => [
	{ params: { locale: "en-US"}},
	{ params: { locale: "pt-BR"}},
];

const { locale = "en-US" } = Astro.params;

const content = await fetchHomeContent(locale);
---

<BaseLayout locale={locale}>
	<header class="bg-zinc-100 border-b-2 border-zinc-900 py-2 sticky top-0">
		<div class="container">Header</div>
	</header>
	<main class="flex-grow">
		<section class="h-screen container">
			<h1>What locale am I in? {locale}</h1>
		</section>
	</main>
	<footer class="bg-zinc-900 py-2">
		<div class="container flex flex-row items-center justify-center text-zinc-200">
			Footer
		</div>
	</footer>
</BaseLayout>
